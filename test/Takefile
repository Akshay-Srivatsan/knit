set src [glob *.c]
set obj [extrepl $src .c .o]
set prog hello

setdef cc gcc
setdef debug 0
set cflags -Wall

if { $debug } {
    set cflags "$cflags -Og -g -fsanitize=address,undefined"
} else {
    set cflags "$cflags -O2"
}

set date [shell date]

rules {

%.o: %.c
    $cc $cflags -c $in -o $out
$prog: $obj
    $cc $cflags $in -o $out
clean:V:
    rm -f $obj $prog
echo-%:VQ:
    echo ${expr "\$$stem"}

}
