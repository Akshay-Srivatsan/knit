set cc gcc
setdef debug 0
set src [glob *.c]

set cflags -Wall

if { $debug } {
    set cflags "$cflags -Og -g -fsanitize=address,undefined"
} else {
    set cflags "$cflags -O2"
}

rules {

%.o: %.c
    $cc $cflags -c $in -o $out
hello: hello.o other.o
    $cc $cflags $in -o $out
clean:V:
    rm -f hello.o other.o hello
echo-%:VQ:
    echo ${expr "\$$stem"}

}
