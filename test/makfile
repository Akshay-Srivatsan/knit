set src [glob *.c]
set obj [extrepl $src .c .o]
set prog hello
set date [shell date]

set cc gcc
setdef debug 0
set cflags -Wall

if { $debug } {
    set cflags "$cflags -Og -g -fsanitize=address,undefined"
} else {
    set cflags "$cflags -O2"
}

rules {

%.o: %.c
    $cc $cflags -c $in -o $out
$prog: other.o hello.o
    $cc $cflags $in -o $out
clean:V:
    rm -f $obj hello
echo-%:VQ:
    echo ${expr "\$$stem"}

}
