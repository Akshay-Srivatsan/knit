knit = import("knit")

cc = cli.cc or "gcc"
debug = cli.debug or 0

cflags = "-Wall"

if debug ~= 0 then
    cflags = f"$cflags -Og -g"
else
    cflags = f"$cflags -O2"
end

src = knit.glob("*.c")
obj = knit.extrepl(src, ".c", ".o")
prog = "hello"

$ $prog: $obj
    $cc $cflags $input -o $output

$ %.o: %.c
    $cc $cflags -c $input -o $output

$ clean:V:
    rm -f $obj $prog
